{
  "name": "com.voanews.voavi",
  "displayName": "VOAVietnamese",
  "version": "1.0.0",
  "description": "Voice of America Mobile for Vietnamese Audiences",
  "main": "index.js",
  "private": true,
  "scripts": {
    "setup": "cordova prepare && cordova prepare && cordova prepare && npm run copy:assets",
    "setup:ios": "cordova prepare ios && cordova prepare ios && cordova prepare ios && npm run copy:assets:ios",
    "setup:android": "cordova prepare android && cordova prepare android && cordova prepare android && npm run copy:assets:android",
    "start:web": "NODE_ENV='host' webpack-dev-server --hot",
    "start:ios": "run-s build:webpack run:ios",
    "prestart:android": "./scripts/avd.js --wait",
    "start:android": "run-s build:webpack run:android",
    "run:android": "cordova run android",
    "run:ios": "cordova run ios",
    "pregenerate": "cp assets/splash.png .",
    "generate": "run-p generate:splash generate:icon",
    "postgenerate": "rimraf ./splash.png",
    "generate:splash": "cordova-splash",
    "generate:icon": "cordova-icon",
    "check": "run-s -c lint test",
    "test": "jest --config jest.json",
    "lint": "tslint --project .",
    "build": "run-s build:webpack build:cordova",
    "build:webpack": "webpack",
    "build:cordova": "cordova build",
    "build:clean": "rimraf plugins && rimraf platforms",
    "build:full": "run-s -c cordova:prepare cordova:prepare cordova:prepare copy:assets build",
    "copy:assets": "run-p copy:assets:*",
    "copy:assets:ios": "rsync -rv ./assets/ios/Images.xcassets/ \"./platforms/ios/VOAVietnamese/Images.xcassets/\"",
    "copy:assets:android": "rsync -rv ./assets/android/res/ ./platforms/android/res/",
    "build:android:clean": "rimraf platforms && npm run build:webpack && cordova prepare android &&& npm run copy:assets:android && cordova build android",
    "build:android": "npm run build:webpack && cordova build android",
    "deploy:android": "adb uninstall com.voanews.voavi > /dev/null 2>&1 || true && adb install platforms/android/build/outputs/apk/debug/android-debug.apk",
    "prepare:ios": "cordova prepare ios && npm run copy:assets:ios && cordova build ios",
    "build:ios": "npm run build:webpack && cordova build ios",
    "scss:types": "tcm -p './src/{components,containers,routes}/**/*.scss'",
    "scss:types:watch": "npm run scss:types -- -w",
    "cordova:prepare": "cordova prepare",
    "protected:zip": "cd protected && zip -e ../protected.zip ./**/*.* ./**/**/*.*",
    "protected:unzip": "unzip protected.zip",
    "protected:prepare": "cd protected && unzip ../protected.zip",
    "gql:types": "apollo-codegen generate src/**/*.graphql --schema node_modules/@voiceofamerica/voa-core-shared/introspect/schema.json --target typescript --output src/helpers/graphql-types.ts"
  },
  "author": "Voice of America",
  "license": "MIT",
  "dependencies": {
    "@types/cordova": "0.0.34",
    "@types/cordova-plugin-device": "^1.1.5",
    "@types/cordova-plugin-x-socialsharing": "^5.1.1",
    "@types/graphql": "^0.11.6",
    "@types/history": "^4.6.1",
