    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "react-redux": "^5.0.6",
    "react-refresher": "^1.0.9",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-virtualized": "^9.18.5",
    "redux": "^3.7.2",
